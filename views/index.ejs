<%- include("partials/header.ejs") %>

<div class="text-center mb-5">
  <h1 class="display-3 fw-bold mb-3">
    <i class="bi bi-journal-text"></i> Welcome to My Blog
  </h1>
  <p class="lead text-muted">Discover stories, thoughts and ideas from our community</p>
  <a href="/create" class="btn btn-primary btn-lg mt-3">
    <i class="bi bi-plus-circle"></i> Create New Post
  </a>
</div>

<hr class="my-5">

<% if (posts.length === 0) { %>
  <div class="alert alert-custom-purple text-center py-5" role="alert">
    <i class="bi bi-inbox fs-1 d-block mb-3 text-primary"></i>
    <h4>No posts yet!</h4>
    <p class="mb-0">Be the first to share your thoughts. Create a new post to get started.</p>
  </div>
<% } else { %>
  <div class="row mb-5">
    <div class="col-12">
      <h2 class="mb-4">
        <i class="bi bi-star-fill text-gradient-purple"></i> Featured Post
      </h2>
      <% const featuredPost = posts[0]; %>
      <div class="card featured-post shadow-lg">
        <div class="card-body p-4">
          <div class="row">
            <div class="col-lg-8">
              <h2 class="card-title display-6 mb-3">
                <%= featuredPost.title %>
              </h2>
              
              <div class="text-muted mb-3">
                <i class="bi bi-person-circle"></i> By <strong><%= featuredPost.author %></strong>
                <span class="mx-2">•</span>
                <i class="bi bi-calendar-event"></i> <%= featuredPost.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                <span class="mx-2">•</span>
                <i class="bi bi-clock"></i> <%= Math.ceil(featuredPost.content.split(' ').length / 200) %> min read
              </div>
              
              <p class="card-text lead">
                <%= featuredPost.content.length > 300 ? featuredPost.content.substring(0, 300) + '...' : featuredPost.content %>
              </p>
            </div>
            
            <div class="col-lg-4 d-flex flex-column justify-content-between">
              <div class="featured-badge mb-3">
                <span class="badge badge-gradient-purple">
                  <i class="bi bi-star-fill"></i> Latest Post
                </span>
              </div>
              
              <div class="d-flex gap-2">
                <a href="/edit/<%= featuredPost.id %>" class="btn btn-outline-primary flex-fill">
                  <i class="bi bi-pencil"></i> Edit
                </a>
                <form action="/delete/<%= featuredPost.id %>" method="POST" class="flex-fill" onsubmit="return handleDelete(event, this);">
                  <button type="submit" class="btn btn-outline-danger w-100">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if (posts.length > 1) { %>
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
          <i class="bi bi-clock-history"></i> Recent Posts
          <span class="badge bg-secondary"><%= posts.length - 1 %></span>
        </h2>
        <% if (posts.length > 4) { %>
          <a href="/posts" class="btn btn-outline-primary">
            View All Posts <i class="bi bi-arrow-right"></i>
          </a>
        <% } %>
      </div>

      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% posts.slice(1, 4).forEach(post => { %>
          <div class="col">
            <div class="card h-100 shadow-sm recent-post-card">
              <div class="card-body">
                <h5 class="card-title">
                  <%= post.title %>
                </h5>
                
                <div class="text-muted small mb-2">
                  <i class="bi bi-person"></i> <%= post.author %>
                  <span class="mx-1">•</span>
                  <i class="bi bi-calendar"></i> <%= post.createdAt.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                </div>
                
                <p class="card-text small">
                  <%= post.content.length > 100 ? post.content.substring(0, 100) + '...' : post.content %>
                </p>
              </div>
              
              <div class="card-footer bg-transparent border-top-0">
                <div class="d-flex gap-2">
                  <a href="/edit/<%= post.id %>" class="btn btn-sm btn-outline-primary flex-fill">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form action="/delete/<%= post.id %>" method="POST" class="flex-fill" onsubmit="return handleDelete(event, this);">
                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
  <% } %>

  <% if (posts.length > 4) { %>
  <div class="text-center mt-5">
    <a href="/posts" class="btn btn-lg btn-primary">
      <i class="bi bi-list-ul"></i> View All <%= posts.length %> Posts
    </a>
  </div>
  <% } %>
<% } %>

<%- include("partials/footer.ejs") %>