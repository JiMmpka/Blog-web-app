<%- include("partials/header.ejs") %>

<div class="text-center mb-5">
  <h1 class="display-4 fw-bold mb-3">
    <i class="bi bi-list-ul"></i> All Blog Posts
  </h1>
  <p class="lead text-muted">Manage and view all your blog posts</p>
  <div class="d-flex gap-2 justify-content-center">
    <a href="/" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Back to Home
    </a>
    <a href="/create" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Create New Post
    </a>
  </div>
</div>

<hr class="my-4">

<% if (posts.length === 0) { %>
  <div class="alert alert-custom-purple text-center py-5" role="alert">
    <i class="bi bi-inbox fs-1 d-block mb-3 text-primary"></i>
    <h4>No posts yet!</h4>
    <p class="mb-0">Create your first post to get started.</p>
  </div>
<% } else { %>
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <h3>
      Total Posts: <span class="badge badge-gradient-purple"><%= posts.length %></span>
    </h3>
    <div class="d-flex align-items-center gap-2">
      <label for="sortSelect" class="mb-0 text-muted">
        <i class="bi bi-sort-down"></i> Sort by:
      </label>
      <select id="sortSelect" class="form-select form-select-sm" style="min-width: 120px;">
        <option value="newest">Newest First</option>
        <option value="oldest">Oldest First</option>
        <option value="title-asc">Title (A-Z)</option>
        <option value="title-desc">Title (Z-A)</option>
        <option value="author">Author (A-Z)</option>
      </select>
    </div>
  </div>

  <div class="row row-cols-1 g-3" id="postsContainer">
    <% posts.forEach((post, index) => { %>
      <div class="col post-item" 
           data-id="<%= post.id %>" 
           data-title="<%= post.title.toLowerCase() %>" 
           data-author="<%= post.author.toLowerCase() %>" 
           data-date="<%= post.createdAt.getTime() %>">
        <div class="card shadow-sm all-posts-card">
          <div class="card-body">
            <div class="row align-items-center">
              
              <div class="col-auto d-none d-md-block">
                <div class="post-number">
                  <span class="badge bg-secondary fs-5"><%= index + 1 %></span>
                </div>
              </div>
              
              <div class="col-md-7 col-lg-8">
                <h4 class="card-title mb-2">
                  <% if (index === 0) { %>
                    <i class="bi bi-star-fill text-gradient-purple"></i>
                  <% } %>
                  <%= post.title %>
                </h4>
                
                <div class="text-muted small mb-2">
                  <i class="bi bi-person-circle"></i> <strong><%= post.author %></strong>
                  <span class="mx-2">•</span>
                  <i class="bi bi-calendar-event"></i> <%= post.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                  <span class="mx-2">•</span>
                  <i class="bi bi-file-text"></i> <%= post.content.split(' ').length %> words
                </div>
                
                <p class="card-text mb-0">
                  <%= post.content.length > 120 ? post.content.substring(0, 120) + '...' : post.content %>
                </p>
              </div>
              
              <div class="col-md-4 col-lg-3 mt-3 mt-md-0">
                <div class="d-flex flex-column gap-2">
                  <a href="/edit/<%= post.id %>" class="btn btn-outline-primary btn-sm edit-link">
                    <i class="bi bi-pencil"></i> Edit Post
                  </a>
                  <form action="/delete/<%= post.id %>" method="POST" class="delete-form" onsubmit="return handleDelete(event, this);">
                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                      <i class="bi bi-trash"></i> Delete Post
                    </button>
                  </form>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

  <div class="text-center mt-5">
    <a href="#" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-up"></i> Back to Top
    </a>
  </div>
<% } %>

<%- include('partials/footer.ejs') %>
